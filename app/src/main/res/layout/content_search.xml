<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.intelligentz.skoolvan.view.SearchActivity"
    tools:showIn="@layout/activity_search">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <!-- Name Label -->
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview">

        </android.support.v7.widget.RecyclerView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_centerVertical="true"></LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add more"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_add_button"
                android:id="@+id/add_more_btn"/>
        </RelativeLayout>
        <!-- Signup Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/background_add_button"
            android:id="@+id/advanced_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:text="ADVANCED SEARCH"
                android:layout_gravity="center_vertical"
                android:id="@+id/advanced_btn"/>
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/advanced_icon"
                android:src="@android:drawable/ic_input_add"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@drawable/background_search_spinner_set"
            android:id="@+id/advance_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="18dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Turn:"
                    android:layout_marginEnd="24dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:layout_marginRight="24dp"
                    android:id="@+id/turn_txt"/>
                <android.support.v7.widget.AppCompatCheckBox
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Drop"
                    android:layout_alignParentRight="true"
                    android:id="@+id/drop_check"/>
                <android.support.v7.widget.AppCompatCheckBox
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:textSize="16sp"
                    android:text="Pick"
                    android:layout_marginRight="24dp"
                    android:layout_toLeftOf="@id/drop_check"
                    android:id="@+id/pick_check"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"></LinearLayout>
            <!-- Address Label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="Grade:"
                    android:layout_gravity="center_vertical|start"
                    android:gravity="center_vertical"
                    android:textSize="18sp"/>
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/input_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginLeft="24dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"></LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    android:layout_marginEnd="24dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:layout_marginRight="24dp"
                    android:id="@+id/gender_txt"/>
                <android.support.v7.widget.AppCompatCheckBox
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Female"
                    android:layout_alignParentRight="true"
                    android:id="@+id/female_check"/>
                <android.support.v7.widget.AppCompatCheckBox
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:textSize="16sp"
                    android:text="Male"
                    android:layout_marginRight="24dp"
                    android:layout_toLeftOf="@id/female_check"
                    android:id="@+id/male_check"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"></LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_signup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:text="Search"/>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
